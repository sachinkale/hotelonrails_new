<% if @error != "" %>
  var d = $("<div class=\"alert alert-error\"></div>").append($("<a class=\"close\" data-dismiss=\"alert\"></a>").text(<%= @error %>));
	$('.content .row-fluid').append(d);
<% elsif @checkin.errors.any? %>
 var d = $("<div class=\"alert alert-error\"></div>").append($("<a class=\"close\" data-dismiss=\"alert\"></a>").text(<%= @checkin.errors.full_messages.join("<br/>") %>));

	$('.content .row-fluid').append(d);

<% else %>
	$('.tab-pane.active .span6').remove();
