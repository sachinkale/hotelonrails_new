$('#service_item_<%= @service_item.id %>').remove();
$('#checkin-<%= @checkin.id %>').find('#service-<%= @service.id %> .service_total').text('<%= @checkin.list_item_total(@service) %>');

$('#invoice-<%= @checkin.invoice_id %>').find('.other_charges').text(<%= @checkin.invoice.total_other_charges %>);

$('#invoice-<%= @checkin.invoice_id %>').find('.grand_total').text(<%= @checkin.invoice.grand_total %>);

$('#invoice-<%= @checkin.invoice_id %>').find('.total_pending').text(<%= @checkin.invoice.grand_total - @checkin.invoice.payments.sum(:amount) %>);


$('#delete_item_loader').hide();
$('#delete_service').modal('hide');
$('#checkin-<%= @checkin.id %>').find('#service-<%= @service.id %> .service_total').effect('highlight',2000);

