    $('#submitme').click(function() {

    });
    $('#cash').click(function(){
      $('.cash').toggle();
    });
    $('#card').click(function(){
      $('.card').toggle();
    });
    $('#debt').click(function(){
      $('.debt').toggle();
    });
    $('#free').click(function(){
      $('.free').toggle();
    });
  });
