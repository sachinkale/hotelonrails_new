<% if @error %>
  alert '<%= @error %>'
<% else %>
  $('.payment_row[id=<%= params[:id] %>]').remove();
	$('#invoice-<%= @invoice.id %> .total_payments').html(<%= @invoice.payments.sum(:amount) %>);
	$('#invoice-<%= @invoice.id %> .total_pending').html(<%=@invoice.grand_total -  @invoice.payments.sum(:amount) %>);
<% end %>
